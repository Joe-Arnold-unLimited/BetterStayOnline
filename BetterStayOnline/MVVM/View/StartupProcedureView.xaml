<UserControl x:Class="BetterStayOnline.MVVM.View.StartupProcedureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetterStayOnline.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Width="300"
                Height="120"
                CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="#58A944" Offset="0.0"/>
                    <GradientStop Color="#0F472F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Grid.Row="1" Grid.Column="1"
                        Name="RunningStartupProcedure"
                        Foreground="White"
                        FontFamily="Medium"
                        FontSize="18"
                        Text="Running startup speedtest"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="40"/>
        </Border>
    </Grid>
</UserControl>
