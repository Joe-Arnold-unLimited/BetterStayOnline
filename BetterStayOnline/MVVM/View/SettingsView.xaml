<UserControl x:Class="BetterStayOnline.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetterStayOnline.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1580"
             Background="#07263b">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1580"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
            <Grid Margin="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="500"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <!--BASIC LINES-->
                <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="500"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0"
                            Text="Show download"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowDownloadPoints}"
                            VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="0" Grid.Row="1"
                            Text="Show upload"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="1"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowUploadPoints}"
                            VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!--TRENDLINES-->
                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="500"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0"
                            Text="Show download trendline"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowDownloadTrendline}"
                            VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="0" Grid.Row="1"
                            Text="Show upload trendline"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="1"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowUploadTrendline}"
                            VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                            Text="Number of days to group by"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="4" Grid.Row="0" Grid.RowSpan="2"
                            Text="Calculated using grouped averages"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal">
                            <TextBlock
                                Text="{Binding DaysForAverage}"
                                IsEnabled="False"
                                HorizontalAlignment="Right"
                                Foreground="Black"
                                VerticalAlignment="Center"
                                Margin="10"
                                Width="32"
                                Background="Gray"/>
                            <StackPanel
                                VerticalAlignment="Center">
                                <RepeatButton Content="&#9650;" Command="{Binding DaysForAverageUpCommand}" Interval="100"/>
                                <RepeatButton Content="&#9660;" Command="{Binding DaysForAverageDownCommand}" Interval="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--MINIMUM VALUES-->
                <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="5"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="500"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0"
                            Text="Show minimum download"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowMinDownload}"
                            VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="2" Grid.Row="0"
                            Text="Minimum download"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Horizontal">
                            <TextBlock
                                Text="{Binding MinDownload}"
                                HorizontalAlignment="Right"
                                IsEnabled="False"
                                Foreground="Black"
                               FontSize="14"
                               FontFamily="Medium"
                                VerticalAlignment="Center"
                                Margin="10"
                                Width="32"
                                Background="Gray"/>
                            <StackPanel
                                VerticalAlignment="Center">
                                <RepeatButton Content="&#9650;" Command="{Binding MinDownloadUpCommand}" Interval="100"/>
                                <RepeatButton Content="&#9660;" Command="{Binding MinDownloadDownCommand}" Interval="100"/>
                            </StackPanel>
                        </StackPanel>


                        <TextBlock Grid.Column="0" Grid.Row="1"
                            Text="Show minimum upload"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="1"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowMinUpload}"
                            VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Grid.Row="1"
                            Text="Minimum upload"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal">
                            <TextBlock
                                Text="{Binding MinUpload}"
                                IsEnabled="False"
                                HorizontalAlignment="Right"
                                Foreground="Black"
                                VerticalAlignment="Center"
                                Margin="10"
                                Width="32"
                                Background="Gray"/>
                            <StackPanel
                                VerticalAlignment="Center">
                                <RepeatButton Content="&#9650;" Command="{Binding MinUploadUpCommand}" Interval="100"/>
                                <RepeatButton Content="&#9660;" Command="{Binding MinUploadDownCommand}" Interval="100"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Column="0" Grid.Row="2"
                            Text="Show percent below minimums"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="2"
                            HorizontalAlignment="Center"
                            Margin="10"
                            IsEnabled="True"
                            IsChecked="{Binding ShowPercentagesBelowMinimums}"
                            VerticalAlignment="Center">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=ShowMinDownload}" Value="True">
                                            <Setter Property="IsEnabled" Value="True" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=ShowMinUpload}" Value="True">
                                            <Setter Property="IsEnabled" Value="True" />
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=ShowMinDownload}" Value="False" />
                                                <Condition Binding="{Binding Path=ShowMinUpload}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="IsEnabled" Value="False" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!--CANDLES-->
                <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="5"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="500"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0"
                            Text="Show monthly download candles"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowDownloadCandles}"
                            VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Grid.Row="0"
                            Text="Error percentage"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Horizontal">
                            <TextBlock
                            Text="{Binding CandleError}"
                            IsEnabled="False"
                            HorizontalAlignment="Right"
                            Foreground="Black"
                            VerticalAlignment="Center"
                            Margin="10"
                            Width="32"
                            Background="Gray"/>
                            <StackPanel
                                VerticalAlignment="Center">
                                <RepeatButton Content="&#9650;" Command="{Binding CandleErrorUpCommand}" Interval="100"/>
                                <RepeatButton Content="&#9660;" Command="{Binding CandleErrorDownCommand}" Interval="100"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="4" Grid.Row="0"
                            Text="Error percentages are a margin of error on either side&#x0a;If the error percentage is 20%, the main candle will be the middle 60% of values"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="0" Grid.Row="1"
                            Text="Show monthly upload candles"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="1"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding ShowUploadCandles}"
                            VerticalAlignment="Center"/>

                        <Border Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="210"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                    Text="Candle Period"
                                    Foreground="White"
                                   FontSize="14"
                                   FontFamily="Medium"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="1" Height="26" Width="80" Margin="8" HorizontalAlignment="Left"
                                      ItemsSource="{Binding CandlePeriods}"
                                      SelectedItem="{Binding CandlePeriod}">
                                </ComboBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!--RUN TEST ON STARTUP-->
                <Border Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="5"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0"
                            Text="Run speedtest on startup"
                            Foreground="White"
                           FontSize="14"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Grid.Row="6"
                            HorizontalAlignment="Center"
                             Margin="10"
                            IsChecked="{Binding RunSpeedtestOnStartup}"
                            VerticalAlignment="Center">
                        </CheckBox>
                        <TextBlock Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2"
                            Text="Turning this off will mean speedtests will not be run on app startup&#x0a;&#x0a;Turn this off if you just want to run tests manually or with events only"
                               TextWrapping="Wrap"
                            Foreground="White"
                           FontSize="13"
                           FontFamily="Medium"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    </Grid>
                </Border>

            </Grid>
        </StackPanel>


        <Button Grid.Column="1" Grid.Row="1"
                        Content="Save"
                        Foreground="White"
                        FontSize="14 "
                        FontWeight="Bold" Grid.ColumnSpan="2"
                        Command="{Binding SaveSettingsCommand}"
                        Margin="0,0,0,12">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#fe6584"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1b911b"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="150" Height="50"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
